@model MVC_Demo.Models.OrderInventory

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Order Inventory</h1>

<h4>Use the form below to Edit Order Inventory.</h4>
<hr class="hline"/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <br />
            <div class="form-group">
                <label asp-for="Orderid" class="control-label">Order ID</label>
                <select asp-for="Orderid" class="form-control" asp-items="ViewBag.Orderid"></select>
                <span asp-validation-for="Orderid" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Inventoryid" class="control-label">Product Name</label>
                <select asp-for="Inventoryid" class="form-control" asp-items="ViewBag.Inventoryid"></select>
                <span asp-validation-for="Inventoryid" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">Quantity Ordered</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
