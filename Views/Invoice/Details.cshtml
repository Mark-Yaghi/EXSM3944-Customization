@model MVC_Demo.Models.OrderInvoice

@{
    ViewData["Title"] = "Details";
}

<h1>Customer Invoice Details</h1>
<br />
<div>
    <h4>Here you can view the details of a customer's invoice.</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            <u>Customer ID Number</u>
        </dt>

        <dt class="col-sm-10">
            <u>Customer Name</u>
        </dt>
       
    </dl> 
    
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayFor(model => model.Customer.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.FullName)
        </dd>   
    </dl>

</div>
<br />
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
