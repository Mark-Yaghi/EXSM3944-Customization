@model MVC_Demo.Models.InventoryProduct

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Product Page</h1>
<br />
<h4>Use the form below to edit the product name and/or quantity.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Qoh" class="control-label">Adjust Product Quantity (+ / -)</label>
                <input asp-for="Qoh" class="form-control" />
                <span asp-validation-for="Qoh" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <br />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
