@model MVC_Demo.Models.InventoryProduct

@{
    ViewData["Title"] = "Delete";
}

<h1>Product Delete</h1>

<br />
<div>
    <h4>Are you sure you want to permanently delete this product from the database?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <!--@Html.DisplayNameFor(model => model.Name)-->
            <u>Product ID Number</u>
        </dt>

        <dt class="col-sm-2">
            <!--@Html.DisplayNameFor(model => model.Name)-->
            <u>Product Name</u>
        </dt>
        <dt class="col-sm-2">
            <!--@Html.DisplayNameFor(model => model.Qoh)-->
            <u>Quantity in Inventory</u>
        </dt>

    </dl>

    <dl class="row">
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.Qoh)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class = "btn btn-primary" asp-action="Index">Back to List</a>
    </form>
</div>
