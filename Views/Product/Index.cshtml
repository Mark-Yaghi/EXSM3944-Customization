@model IEnumerable<MVC_Demo.Models.InventoryProduct>

@{
    ViewData["Title"] = "Index";
}

<h1>Products Page</h1>
<br />
<h4>Use the form below to add, update or delete products from inventory.
    
</h4>
<br />
<p>
    <a class="btn btn-primary" asp-action="Create">Create New Product</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Qoh)-->
                Quantity Currently in Inventory
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qoh)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
